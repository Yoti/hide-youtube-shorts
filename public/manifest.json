{
    "name": "Hide YouTube Shorts",
    "manifest_version": 3,
    "version": "1.6.15.2",
    "description": "__MSG_extDesc__",
    "default_locale": "en",
    "permissions": [
        "storage",
        "scripting",
        "tabs"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "assets/background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "https://m.youtube.com/*"
            ],
            "js": [
                "assets/mobile.js"
            ]
        }
    ],
    "action": {
        "default_title": "Hide YouTube Shorts",
        "default_popup": "index.html"
    },
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon48.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}